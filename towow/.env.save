# ToWow Environment Configuration
# Copy this file to .env and fill in your values

# ============ Application ============
APP_ENV=development
DEBUG=true
APP_PORT=8000

# ============ CORS ============
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ============ Database ============
# For Docker deployment
POSTGRES_USER=towow
POSTGRES_PASSWORD=password
POSTGRES_DB=towow
POSTGRES_PORT=5432

# Database URL (auto-constructed in Docker, set manually for local dev)
DATABASE_URL=postgresql://towow:password@localhost:5432/towow

# ============ OpenAgent ============
OPENAGENT_HOST=localhost
OPENAGENT_HTTP_PORT=8700
OPENAGENT_GRPC_PORT=8600

# ============ LLM Providers ============
ANTHROPIC_API_KEY=sk-zwg1SM4mXTC1mwz5KcXzSkDLia68k0n0rO26y0FCwA4

# ============ Optional ============
