# ToWow Environment Configuration
# Copy this file to .env and fill in your values

# ============ Application ============
APP_ENV=development
DEBUG=true
APP_PORT=8000

# ============ CORS ============
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ============ Database ============
# For Docker deployment
POSTGRES_USER=towow
POSTGRES_PASSWORD=password
POSTGRES_DB=towow
POSTGRES_PORT=5432

# Database URL (auto-constructed in Docker, set manually for local dev)
DATABASE_URL=postgresql://towow:password@localhost:5432/towow

# ============ OpenAgent ============
OPENAGENT_HOST=localhost
OPENAGENT_HTTP_PORT=8700
OPENAGENT_GRPC_PORT=8600

# ============ LLM Providers ============
ANTHROPIC_API_KEY=your_api_key_here

# ============ Optional ============
# SecondMe API (if using real SecondMe integration)
# SECONDME_API_URL=https://api.secondme.io
# SECONDME_API_KEY=your_key_here

# ============ Admin API ============
# Required for Admin API access (/admin/*)
ADMIN_API_KEY=your-secret-admin-key-here

# ============ Negotiation Configuration ============
# Maximum number of negotiation rounds (default: 3)
# TOWOW_MAX_NEGOTIATION_ROUNDS=3

# Response timeout in seconds (default: 300)
# TOWOW_RESPONSE_TIMEOUT=300

# Feedback timeout in seconds (default: 120)
# TOWOW_FEEDBACK_TIMEOUT=120

# ============ Gap Identification Configuration ============
# Minimum participants threshold (default: 2)
# TOWOW_MIN_PARTICIPANTS_THRESHOLD=2

# Coverage threshold 0.0-1.0 (default: 0.7)
# TOWOW_COVERAGE_THRESHOLD=0.7
