# ToWow Environment Configuration
# Copy this file to .env and fill in your values

# ============ Application ============
APP_ENV=development
DEBUG=true
APP_PORT=8000

# ============ CORS ============
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ============ Database ============
# For Docker deployment
POSTGRES_USER=towow
POSTGRES_PASSWORD=password
POSTGRES_DB=towow
POSTGRES_PORT=5432

# Database URL (auto-constructed in Docker, set manually for local dev)
DATABASE_URL=postgresql://towow:password@localhost:5432/towow

# ============ OpenAgent ============
OPENAGENT_HOST=localhost
OPENAGENT_HTTP_PORT=8700
OPENAGENT_GRPC_PORT=8600

# ============ LLM Providers ============
ANTHROPIC_API_KEY=your_api_key_here

# ============ Optional ============
# SecondMe API (if using real SecondMe integration)
# SECONDME_API_URL=https://api.secondme.io
# SECONDME_API_KEY=your_key_here

# ============ Admin API ============
# Required for Admin API access (/admin/*)
ADMIN_API_KEY=your-secret-admin-key-here

# ============ Negotiation Configuration ============
# Maximum number of negotiation rounds (default: 3)
# TOWOW_MAX_NEGOTIATION_ROUNDS=3

# Response timeout in seconds (default: 300)
# TOWOW_RESPONSE_TIMEOUT=300

# Feedback timeout in seconds (default: 120)
# TOWOW_FEEDBACK_TIMEOUT=120

# ============ Gap Identification Configuration ============
# Minimum participants threshold (default: 2)
# TOWOW_MIN_PARTICIPANTS_THRESHOLD=2

# Coverage threshold 0.0-1.0 (default: 0.7)
# TOWOW_COVERAGE_THRESHOLD=0.7

# ============ Stage Delays Configuration ============
# Enable stage delays for realistic negotiation UX (default: true)
# Set to "false" for faster testing
# TOWOW_ENABLE_STAGE_DELAYS=true

# Delay before filter completion event in seconds (default: 1.5)
# TOWOW_FILTER_STAGE_DELAY=1.5

# Delay for each agent response in seconds (default: 0.8)
# TOWOW_AGENT_RESPONSE_DELAY=0.8

# Delay before aggregation starts in seconds (default: 1.0)
# TOWOW_AGGREGATION_STAGE_DELAY=1.0

# Delay before proposal distribution in seconds (default: 1.2)
# TOWOW_PROPOSAL_STAGE_DELAY=1.2

# Delay for LLM mock responses in seconds (default: 0.5)
# TOWOW_LLM_MOCK_DELAY=0.5
